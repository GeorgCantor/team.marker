<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/btn_update_0"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_description" />
        <Constraint
            android:id="@+id/btn_update_1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="150dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_update_0" />
        <Constraint
            android:id="@+id/btn_update_2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="200dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_update_1" />
        <Constraint
            android:id="@+id/btn_update_3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="250dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_update_2" />
        <Constraint
            android:id="@+id/btn_update_4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="300dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_update_3" />
        <Constraint
            android:id="@+id/btn_update_5"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="350dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_update_4" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint android:id="@id/text_description" />
    </ConstraintSet>

    <Transition
        app:autoTransition="animateToEnd"
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start"
        app:duration="500" />`

</MotionScene>
