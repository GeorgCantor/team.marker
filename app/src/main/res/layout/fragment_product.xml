                <TextView
                    android:id="@+id/list_2_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:fontFamily="sans-serif"
                    android:text="Характеристики"
                    android:textColor="#333"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@id/list_2_photo"
                    app:layout_constraintStart_toEndOf="@id/list_2_photo"
                    app:layout_constraintTop_toTopOf="@id/list_2_photo" />

                <ImageView
                    android:id="@+id/list_2_expand"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="25dp"
                    app:layout_constraintBottom_toBottomOf="@id/list_2_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/list_2_title"
